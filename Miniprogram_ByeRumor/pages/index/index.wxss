.tabWrapper{
  display: flex;
  justify-content: space-around;
  height: 65rpx;
  padding-top: 15rpx;
  border-top: solid 2rpx #aaaaaa;
  border-bottom: solid 1rpx #dddddd;
  font-size: 28rpx;
  color: #7f7f7f;
}

.tab{
  height: 45rpx;
}

.tabSelected{
  border-bottom: solid 5rpx #3A9BD5;
}

.contentWrapper{
  display: flex;
  flex-direction: column;
}

.contentWrapper .dataWrapper{
  display: flex;
}

.contentWrapper .dataWrapper .sideBar{
  width: 25rpx;
}

.contentWrapper .dataWrapper .ruBar{
background-color: #CD672F;
}

.contentWrapper .dataWrapper .scBar{
background-color: #FACC48
}

.contentWrapper .dataWrapper .dyBar{
background-color: #3499F7;
}

.contentWrapper .dataWrapper .infoWrapper{
  flex-grow: 1;
}

.contentWrapper .dataWrapper .infoWrapper .info{
  height: 205rpx;
  border-bottom: solid 5rpx #e3e3e3;
}