/* pages/profile/profile.wxss */
wxml{
  width: 100%;
  height: 100%;
}
.profile-container{
  width: 100%;
  height: 100%;
  position: relative;
}
.profile-login{
  height: 80px;
  background-color: #ffffff;
  border: 1px solid #f1f1f1
}
.login-pic{
  height: 50px;
  width: 50px;
  border-radius: 50%;
  background-color: #b5e3f5;
  border: 1px solid #f1f1f1;
  position: absolute;
  left: 20px;
  top: 10%;
}
.icon-user{
  font-size: 40px;
  color: #f1f1f1;
  position: absolute;
  left: 5px;
  top: 2px;
}
.profile-login text{
  line-height: 90px;
  position: absolute;
  left: 90px;
  font-weight: 400;
  font-size: 20px;
}
.profile-login .icon-youjiantou{
  float: right;
  line-height: 80px;
  margin-right: 5px;
  color: #ccc;
}
.my-collection{
  height: 50px;
  background-color: #ffffff;
  border: 1px solid #f1f1f1
}
.my-collection text{
  line-height: 50px;
  padding-left: 20px;
}
.my-collection .icon-youjiantou{
  float: right;
  line-height: 50px;
  margin-right: 5px;
  color: #ccc;
}
.suggestion{
  height: 50px;
  background-color: #ffffff;
  border: 1px solid #f1f1f1
}
.suggestion text{
  line-height: 50px;
  padding-left: 20px;
}
.suggestion .icon-youjiantou{
  float: right;
  line-height: 50px;
  margin-right: 5px;
  color: #ccc;
}
